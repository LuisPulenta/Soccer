@model Soccer.Web.Data.Entities.TeamEntity

@{
    ViewData["Title"] = "Detalle Equipo";
}

<h2></h2>

<div>
    <h4></h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Initials)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Initials)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.League.Name)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.League.Name)
                </dd>

            </dl>
        </div>
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.LogoPath))
            {
                <img src="@Url.Content(Model.LogoPath)" alt="Image" style="width:100;height:100px;max-height: 100%; width: auto;" />
            }
        </div>
    </div>
</div>
<div>
    <a asp-action="EditTeam" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Details" asp-route-id="@Model.League.Id" class="btn btn-success">Regresar</a>
</div>